extends layout

block content
  section.hero.is-fullheight.is-dark.is-bold
    .hero-head
      .container
        nav.nav
          .container
            .nav-left
              a.nav-item(href='/')
                img(src='/images/bulma-white.png', alt='Description')
            span.nav-toggle
              span
              span
              span
            .nav-right.nav-menu
              a.nav-item(href='/')
                | Home
              a.nav-item(href='/departments')
                | Departments
              a.nav-item.is-active(href='/departments/addnew')
                | Add Data
              a.nav-item(href='/auth/logout')
                | Log Out
    .hero-body
      .container
        .columns.is-vcentered
          .column.is-4.is-offset-4
            h1.title
              | Add Data
            .box
              if (error)
                //--var eArr = []
                //--var e
                //--var a
                //-for e in Object.keys(error.errors)
                //-  eArr.push(e)
                //-for a in eArr
                .notification.is-danger
                  //- | #{error.errors.head}
                  //- | #{error.errors.abbrv}
                  //- | #{error.errors.dep_name}
                  | #{error}
                  //--var er = "#{error}"
                  //--var a = er.slice(1)
                  //-h1= a
              form(method="POST", action="/departments/")
                label.label 
                  | Field with 
                  strong.iscolor *
                  |  is required.
                label.label 
                  | Department Name
                  strong.iscolor *
                  input.input(type="text", placeholder="", name="dep_name" )
                label.label 
                  | Abbreviation 
                  strong.iscolor *
                  input.input(type="text", placeholder="", name="abbrv" )
                label.label 
                  | Secretary/Head
                  strong.iscolor *
                  input.input(type="text", placeholder="", name="head" )
                label.label Official Website
                p.control
                  input.input(type="url", placeholder="http://www.example.com", name="website" )
                label.label Contact Number
                p.control
                  input.input(type="value", placeholder="Contact Number", name="contact" )
                label.label Facebook
                p.control
                  input.input(type="text", placeholder="http://www.facebook.com/example", name="fb" )
                label.label Twitter
                p.control
                  input.input(type="text", placeholder="http://www.twitter.com/example", name="tw" )
                label.label Image
                p.control
                  input.input(type="text", placeholder="Image (URL)", name="picture")
                p.control
                  button.button.is-dark(type="submit") Submit
                  span  
                  a.btn.btn-link(href="/departments")
                        button.button.is-dark(type="button") Cancel
  include footer
