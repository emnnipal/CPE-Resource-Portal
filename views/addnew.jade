extends layout

block content
    nav.navbar.navbar-toggleable-md.navbar-dark.fixed-top.scrolling-navbar
      .container
        button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarNav1', aria-controls='navbarNav1', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        a.navbar-brand(href='#')
          strong Navbar
        #navbarNav1.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/')
                | Home 
            li.nav-item
              a.nav-link(href='/subjects') Subjects    
            li.nav-item.active
              a.nav-link(href='/subjects/addnew') Add
                span.sr-only (current)
          li.nav-item.form-inline
              a.nav-link(href='/auth/logout') Log out
    .view
      .full-bg-img.flex-center
        ul.animated.fadeInUp
          li
            br
            br
            br
            .container.row.justify-content-center
              .col-6
                .card-block
                  form(method="POST", action="/subjects/addnew")
                    // Header
                    .text-center
                      h3
                        i.fa
                        |  Add a subject
                      hr.mt-2.mb-2
                    // Body
                    if (error)
                          .card.card-danger.text-center.z-depth-2.mb-1
                            .card-block
                              p.white-text.mb-0
                                | #{error}
                    else
                      p 
                      | Field with 
                      strong.iscolor *
                      |  is required.
                    br
                    // Body
                    .md-form
                      i.fa.prefix
                      input#form3.form-control(type='text', name="name")
                      label(for='form3') Subject Name*
                    .md-form
                      i.fa.prefix
                      input#form2.form-control(type='text', name="code")
                      label(for='form2') Subject Code*
                    .md-form
                      i.fa.prefix
                      input#form32.form-control(type='text', name="year")
                      label(for='form32') Subject Year*
                    .md-form
                      i.fa.prefix
                      label Subject Sem*
                    .md-form
                      input(type='radio', name="sem" value="1st Semester") 
                      |  1st Semester
                      br
                      input(type='radio', name="sem" value="2nd Semester") 
                      |  2nd Semester
                                         
                    .text-center
                      button.btn.btn-default Submit
                      .call
                        br
                        p
                          | 
                          br
                          span
                            i.fa.
                          |  
    include footer